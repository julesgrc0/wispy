{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 1
  },
  "configurePresets": [
    {
      "name": "windows-base",
      "hidden": true,
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/out/${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "OFF"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "linux-base",
      "hidden": true,
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/out/${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "OFF"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "macos-base",
      "hidden": true,
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/out/${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "OFF"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "debug-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "relminsize-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "MinSizeRel",
        "W_BUILD_MINSIZE": "ON"
      }
    },
    {
      "name": "x64-base",
      "hidden": true,
      "architecture": {
        "value": "x64",
        "strategy": "external"
      }
    },
    {
      "name": "x86-base",
      "hidden": true,
      "architecture": {
        "value": "x86",
        "strategy": "external"
      }
    },

    {
      "name": "x64-debug-windows",
      "displayName": "x64 Debug Windows",
      "inherits": ["windows-base", "debug-base", "x64-base"]
    },
    {
      "name": "x86-debug-windows",
      "displayName": "x86 Debug Windows",
      "inherits": ["windows-base", "debug-base", "x86-base"]
    },
    {
      "name": "x64-release-windows",
      "displayName": "x64 Release Windows",
      "inherits": ["windows-base", "release-base", "x64-base"]
    },
    {
      "name": "x86-release-windows",
      "displayName": "x86 Release Windows",
      "inherits": ["windows-base", "release-base", "x86-base"]
    },
    {
      "name": "x64-relminsize-windows",
      "displayName": "x64 MinSizeRel Windows",
      "inherits": ["windows-base", "relminsize-base", "x64-base"]
    },
    {
      "name": "x86-relminsize-windows",
      "displayName": "x86 MinSizeRel Windows",
      "inherits": ["windows-base", "relminsize-base", "x86-base"]
    },

    {
      "name": "x64-debug-linux",
      "displayName": "x64 Debug Linux",
      "inherits": ["linux-base", "debug-base", "x64-base"]
    },
    {
      "name": "x86-debug-linux",
      "displayName": "x86 Debug Linux",
      "inherits": ["linux-base", "debug-base", "x86-base"]
    },
    {
      "name": "x64-release-linux",
      "displayName": "x64 Release Linux",
      "inherits": ["linux-base", "release-base", "x64-base"]
    },
    {
      "name": "x86-release-linux",
      "displayName": "x86 Release Linux",
      "inherits": ["linux-base", "release-base", "x86-base"]
    },
    {
      "name": "x64-relminsize-linux",
      "displayName": "x64 MinSizeRel Linux",
      "inherits": ["linux-base", "relminsize-base", "x64-base"]
    },
    {
      "name": "x86-relminsize-linux",
      "displayName": "x86 MinSizeRel Linux",
      "inherits": ["linux-base", "relminsize-base", "x86-base"]
    },

    {
      "name": "x64-debug-macos",
      "displayName": "x64 Debug MacOS",
      "inherits": ["macos-base", "debug-base", "x64-base"]
    },
    {
      "name": "x86-debug-macos",
      "displayName": "x86 Debug MacOS",
      "inherits": ["macos-base", "debug-base", "x86-base"]
    },
    {
      "name": "x64-release-macos",
      "displayName": "x64 Release MacOS",
      "inherits": ["macos-base", "release-base", "x64-base"]
    },
    {
      "name": "x86-release-macos",
      "displayName": "x86 Release MacOS",
      "inherits": ["macos-base", "release-base", "x86-base"]
    },
    {
      "name": "x64-relminsize-macos",
      "displayName": "x64 MinSizeRel MacOS",
      "inherits": ["macos-base", "relminsize-base", "x64-base"]
    },
    {
      "name": "x86-relminsize-macos",
      "displayName": "x86 MinSizeRel MacOS",
      "inherits": ["macos-base", "relminsize-base", "x86-base"]
    }
  ],
  "buildPresets": [
    {
      "name": "base-build",
      "hidden": true,
      "cleanFirst": true
    },
    {
      "name": "x64-release-windows",
      "displayName": "x64 Release Windows",
      "configurePreset": "x64-release-windows",
      "inherits": ["base-build"]
    },
    {
      "name": "x86-release-windows",
      "displayName": "x86 Release Windows",
      "configurePreset": "x86-release-windows",
      "inherits": ["base-build"]
    },
    {
      "name": "x64-release-linux",
      "displayName": "x64 Release Linux",
      "configurePreset": "x64-release-linux",
      "inherits": ["base-build"]
    },
    {
      "name": "x86-release-linux",
      "displayName": "x86 Release Linux",
      "configurePreset": "x86-release-linux",
      "inherits": ["base-build"]
    },
    {
      "name": "x64-release-macos",
      "displayName": "x64 Release MacOS",
      "configurePreset": "x64-release-macos",
      "inherits": ["base-build"]
    },
    {
      "name": "x86-release-macos",
      "displayName": "x86 Release MacOS",
      "configurePreset": "x86-release-macos",
      "inherits": ["base-build"]
    },

    {
      "name": "x64-debug-windows",
      "displayName": "x64 Debug Windows",
      "configurePreset": "x64-debug-windows",
      "inherits": ["base-build"]
    },
    {
      "name": "x86-debug-windows",
      "displayName": "x86 Debug Windows",
      "configurePreset": "x86-debug-windows",
      "inherits": ["base-build"]
    },
    {
      "name": "x64-debug-linux",
      "displayName": "x64 Debug Linux",
      "configurePreset": "x64-debug-linux",
      "inherits": ["base-build"]
    },
    {
      "name": "x86-debug-linux",
      "displayName": "x86 Debug Linux",
      "configurePreset": "x86-debug-linux",
      "inherits": ["base-build"]
    },
    {
      "name": "x64-debug-macos",
      "displayName": "x64 Debug MacOS",
      "configurePreset": "x64-debug-macos",
      "inherits": ["base-build"]
    },
    {
      "name": "x86-debug-macos",
      "displayName": "x86 Debug MacOS",
      "configurePreset": "x86-debug-macos",
      "inherits": ["base-build"]
    }
  ]
}
